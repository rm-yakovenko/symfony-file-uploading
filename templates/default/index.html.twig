{% extends 'base.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-xs-12 text-center">
            <h1>Upload your file</h1>
            {{ form_start(form) }}
                <div class="form-group">
                    {{ form_row(form.file, {attr: {class: 'form-control', style: 'height: 200px;'}, label: false}) }}
                    <p class="help-block">You will be redirected to a secure link to the file.</p>
                </div>
                <button type="submit" class="btn btn-success btn-lg">Upload</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}